<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                                  http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
        <message-bundle>
            Message
        </message-bundle>
        <resource-bundle>
            <base-name>Message</base-name>
            <var>message</var>
        </resource-bundle>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>ro</supported-locale>
        </locale-config>
    </application>
    <navigation-rule>
        <from-view-id>/views/inputExams.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>inputStudents</from-outcome>
            <to-view-id>/views/inputStudents.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/views/inputStudents.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>viewTables</from-outcome>
            <to-view-id>/views/examTable.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/views/home.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>inputExams</from-outcome>
            <to-view-id>/views/inputExams.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/WEB-INF/templates/genericDataEdit.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>inputStudents</from-outcome>
            <to-view-id>/views/inputStudents.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>genericDataEdit</from-outcome>
            <to-view-id>/WEB-INF/templates/genericDataEdit.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>inputExams</from-outcome>
            <to-view-id>/views/inputExams.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>